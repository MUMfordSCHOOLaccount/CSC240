using static System.Console;

class PhoneCall
{
    static void Main()
    {
        double price1 = CalcPhoneCallPrice(10, 0.05);
        WriteLine($"Price for 10 minutes at $0.05 per minute: ${price1:F2}");

        double price2 = CalcPhoneCallPrice(5, 0.10);
        WriteLine($"Price for 5 minutes at $0.10 per minute: ${price2:F2}");

        double price3 = CalcPhoneCallPrice(20, 0.03);
        WriteLine($"Price for 20 minutes at $0.03 per minute: ${price3:F2}");

        double price4 = CalcPhoneCallPrice(15, 0.08);
        WriteLine($"Price for 15 minutes at $0.08 per minute: ${price4:F2}");
    }

    static double CalcPhoneCallPrice(double minutes, double rate)
    {
        const double CONNECTION_CHARGE = 0.25;
        return (minutes * rate) + CONNECTION_CHARGE;
    }
}
