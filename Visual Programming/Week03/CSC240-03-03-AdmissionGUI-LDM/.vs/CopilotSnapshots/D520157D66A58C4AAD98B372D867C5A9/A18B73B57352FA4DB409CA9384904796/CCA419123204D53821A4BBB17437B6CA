using System;
using System.Windows.Forms;

public class AdmissionForm : Form
{
    private Label lblGPA;
    private TextBox txtGPA;
    private Label lblTestScore;
    private TextBox txtTestScore;
    private Button btnCheck;
    private Label lblResult;

    public AdmissionForm()
    {
        this.Text = "Admission Checker";
        this.Size = new System.Drawing.Size(300, 200);

        // Initialize controls
        lblGPA = new Label() { Text = "High School GPA:", Location = new System.Drawing.Point(10, 10) };
        txtGPA = new TextBox() { Location = new System.Drawing.Point(120, 10), Width = 100 };

        lblTestScore = new Label() { Text = "Admission Test Score:", Location = new System.Drawing.Point(10, 40) };
        txtTestScore = new TextBox() { Location = new System.Drawing.Point(120, 40), Width = 100 };

        btnCheck = new Button() { Text = "Check Admission", Location = new System.Drawing.Point(10, 70) };

        lblResult = new Label() { Text = "", Location = new System.Drawing.Point(10, 100), AutoSize = true };

        // Add controls to form
        this.Controls.Add(lblGPA);
        this.Controls.Add(txtGPA);
        this.Controls.Add(lblTestScore);
        this.Controls.Add(txtTestScore);
        this.Controls.Add(btnCheck);
        this.Controls.Add(lblResult);

        // Event handler will be added later
    }
}